@model IEnumerable<ControleHoras.APRESENTACAO.Models.ContratoViewModel>

@{
    ViewBag.Title = "Lista de Contratos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--https://harvesthq.github.io/chosen/-->
<h2>Cadastro de Contratos</h2>

<button type="button" class="btn btn-success">@Html.ActionLink("Novo Cadastro", "Create")</button>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClienteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroReferencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModalidadeContrato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModalidadeApuracao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFim)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroReferencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModalidadeContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModalidadeApuracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ContratoID }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.ContratoID }, htmlAttributes: new { @class = "text-success" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.ContratoID }, htmlAttributes: new { @class = "text-danger" }) |
                @if (item.Ativo)
                {
                    @Html.ActionLink("Desativar", "Desativar", new { id = item.ClienteID }, htmlAttributes: new { @class = "text-danger" });
                }
                @if (!item.Ativo)
                {
                    @Html.ActionLink("Reativar", "Reativar", new { id = item.ClienteID });
                }
            </td>
        </tr>
    }

</table>
