    <div id="main">
        
        <h1>Relatório de Faturamento</h1>

        <div id="profissional">

            <table class="tableHeader">
                <tr class="tableHeaderRow">
                    <td class="tableHeaderLabel"><p>Consultor:</p></td>
                    <td class="tableHeaderContent">
                        <p>
                            @Html.DisplayFor(model => model.Cliente)
                        </p>
                    </td>
                </tr>
                <tr class="tableHeaderRow">
                    <td class="tableHeaderLabel"><p>Período:</p></td>
                    <td class="tableHeaderContent">
                        <p>
                            @Html.DisplayFor(model => model.Periodo)
                        </p>
                    </td>
                </tr>

                <tr class="tableHeaderRow">
                    <td class="tableHeaderLabel"><p>Data:</p></td>
                    <td class="tableHeaderContent">
                        <p>
                            @Html.DisplayFor(model => model.DataEmissao)
                        </p>
                    </td>
                </tr>

            </table>

        </div>

        <h2>Lançamentos</h2>

        <div id="lancamentos">

            <table class="tableItem">
                <tr class="tableItemRow">
                    <td class="tableItemLabel"><p>Profissional</p></td>
                    <td class="tableItemLabel"><p>Contrato</p></td>
                    <td class="tableItemLabel"><p>Qtd. Horas</p></td>
                    <td class="tableItemLabel"><p>Faturamento</p></td>
                    <td class="tableItemLabel"><p>Custo</p></td>
                </tr>

                @if (Model.Lancamentos != null && Model.Lancamentos.Count > 0)
                {
                    foreach (FaturamentoLancamentoViewModel item in Model.Lancamentos)
                    {

                    <tr class="tableItemRow">
                        <td class="tableItemContent">
                            <p>
                                @Html.DisplayFor(i => item.Profissional)
                            </p>
                        </td>
                        <td class="tableItemContent">
                            <p>
                                @Html.DisplayFor(i => item.Contrato)
                            </p>
                        </td>
                        <td class="tableItemContent">
                            <p>
                                @Html.DisplayFor(i => item.TotalHoras)
                            </p>
                        </td>
                        <td class="tableItemContent">
                            <p>
                                @Html.DisplayFor(i => item.ValorFaturado)
                            </p>
                        </td>
                        <td class="tableItemContent">
                            <p>
                                @Html.DisplayFor(i => item.ValorCusto)
                            </p>
                        </td>
                    </tr>
                    }
                }
            </table>

        </div>

