@model IEnumerable<ControleHoras.APRESENTACAO.Models.ClienteIpViewModel>

@{
    ViewBag.Title = "Configurações de Rede";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Configurações de Rede</h2>

<button type="button" class="btn btn-success">@Html.ActionLink("Novo Cadastro", "Create")</button>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClienteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ip)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ip)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ClienteIpID }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.ClienteIpID }, htmlAttributes: new { @class = "text-success" }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.ClienteIpID }, htmlAttributes: new { @class = "text-danger" })
            </td>
        </tr>
    }

</table>
