@model ControleHoras.APRESENTACAO.Models.ClienteIpViewModel

@{
    ViewBag.Title = "Configurações de Rede";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Configurações de Rede</h2>
<nav class="breadcrumb">
    @Html.ActionLink("Cliente", "Index") /
    <span class="breadcrumb-item active">Excluir IP</span>
</nav>

<h3 class="text-danger">Deseja realmente apagar este endereço de rede?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClienteID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClienteID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ip)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ip)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            &laquo;@Html.ActionLink("Voltar", "Index") | 
            <input type="submit" value="Excluir" class="btn btn-danger" /> 
        </div>
    }
</div>
